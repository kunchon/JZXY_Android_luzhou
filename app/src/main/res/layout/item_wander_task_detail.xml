<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_task_detail_blue"
        android:padding="1dp"
        android:src="@mipmap/ic_water" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_toRightOf="@+id/iv_type"
        android:text="CD20181120-W00102"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_toRightOf="@+id/tv_num"
        android:gravity="left"
        android:text="水和废水采样和交接记录"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_submit_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_6"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:text="提交：2018/08/08"
        android:textColor="@color/text_color_999999"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_6"
        android:text="待收样"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/bg_color_41af91"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="点位1"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_14" />
    <include layout="@layout/view_line" />


</RelativeLayout>