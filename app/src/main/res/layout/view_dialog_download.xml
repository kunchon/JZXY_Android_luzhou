<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_dp_42"
        android:background="@color/bg_color_f8f8f8"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:text="数据更新"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_14" />

    <include layout="@layout/view_line" />


    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/bg_color_ffffff"
        android:gravity="center"
        android:text="数据更新中，请稍后..."
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_13" />

    <cn.cdjzxy.android.monitoringassistant.widget.ProgressBar.NumberProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        app:progress_current="0"
        app:progress_max="100"
        app:progress_reached_bar_height="@dimen/dp_12"
        app:progress_reached_color="@color/bg_color_2b99ff"
        app:progress_text_color="@color/text_color_2b99ff"
        app:progress_text_offset="@dimen/dp_8"
        app:progress_text_size="@dimen/text_size_15"
        app:progress_text_visibility="visible"
        app:progress_unreached_bar_height="0.75dp"
        app:progress_unreached_color="#CCCCCC" />
    <include layout="@layout/view_line" />
    <TextView
        android:id="@+id/tv_hint_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/bg_color_ffffff"
        android:gravity="center"
        android:text="正在同步采样单"
        android:visibility="gone"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_13" />

    <cn.cdjzxy.android.monitoringassistant.widget.ProgressBar.NumberProgressBar
        android:id="@+id/progressbar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        app:progress_current="0"
        android:visibility="gone"
        app:progress_max="100"
        app:progress_reached_bar_height="@dimen/dp_12"
        app:progress_reached_color="@color/bg_color_2b99ff"
        app:progress_text_color="@color/text_color_2b99ff"
        app:progress_text_offset="@dimen/dp_8"
        app:progress_text_size="@dimen/text_size_15"
        app:progress_text_visibility="visible"
        app:progress_unreached_bar_height="0.75dp"
        app:progress_unreached_color="#CCCCCC" />
</LinearLayout>