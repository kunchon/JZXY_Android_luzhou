<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_modify_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_dp_52"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:drawablePadding="@dimen/dp_16"
            android:drawableRight="@mipmap/ic_has_next"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#303030"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="#676767"
            android:textSize="@dimen/text_size_14" />


    </LinearLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_dp_52">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="原密码"
            android:textColor="#303030"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="填写原密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingRight="16dp"
            android:textColor="#303030"
            android:textColorHint="#676767"
            android:textSize="@dimen/text_size_14"
            android:theme="@style/LoginEditText" />

    </RelativeLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_dp_52">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="#303030"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="填写新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingRight="16dp"
            android:textColor="#303030"
            android:textColorHint="#676767"
            android:textSize="@dimen/text_size_14"
            android:theme="@style/LoginEditText" />

    </RelativeLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_dp_52">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="#303030"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/et_sure_pwd"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingRight="16dp"
            android:textColor="#303030"
            android:textColorHint="#676767"
            android:textSize="@dimen/text_size_14"
            android:theme="@style/LoginEditText" />

    </RelativeLayout>

    <include layout="@layout/view_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height_dp_52"
        android:layout_marginLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:text="密码必须是8-16位数字、字符组合（不能是纯数字）"
        android:textColor="#FABA81"
        android:textSize="@dimen/text_size_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/view_line" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height_dp_52"
        android:background="@color/white"
        android:text="确认"
        android:textColor="#63B4FB"
        android:textSize="@dimen/text_size_14" />


</LinearLayout>
