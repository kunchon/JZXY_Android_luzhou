<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_task_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/ic_task_type"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_task_type"
                android:layout_toRightOf="@id/iv_task_type"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="任务名称"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_task_time_range"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="2018-11-30 ~ 2018-11-30"
                        android:textColor="@color/text_color_ffbe00"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="任务编号：HJT234345"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tv_task_point"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingRight="@dimen/dp_16"
                        android:text="点位：6"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tv_task_project_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingRight="@dimen/dp_16"
                        android:text="项目：13"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="样品性质：地表水监测"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tv_task_person"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingRight="@dimen/dp_16"
                        android:text="人员：张三、李四、王五"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tv_task_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="待收样"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/view_line" />


</LinearLayout>